<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinhan.travelTogether.notification">
	<insert id="insertNotification" parameterType="notificationvo">
		<selectKey resultType="int" keyProperty="message_id" order="BEFORE">
			select message_seq.nextval from dual
		</selectKey>
		insert into tt_message(message_id, message_content, send_date, member_id)
		values(#{message_id}, #{message_content}, sysdate, #{member_id})
	</insert>
	<select id="selectNotificationById" parameterType="int" resultType="notificationvo">
		select *
		from tt_message
		where message_id = #{message_id}
	</select>
	<select id="selectAllNotification" resultType="notificationvo">
		select *
		from tt_message
		order by send_date desc
	</select>
</mapper>